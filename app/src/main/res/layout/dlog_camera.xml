<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_magin"
        android:layout_marginRight="@dimen/normal_magin"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/dlg_camera_btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/top_cir_selector"
            android:text="拍照"
            android:textSize="@dimen/title_large_size"/>
        <include layout="@layout/single_line"/>
        <Button
            android:id="@+id/dlg_camera_btnPhoto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bottom_cir_selector"
            android:text="从相册选取"
            android:textSize="@dimen/title_large_size"/>

        <Button
            android:id="@+id/dlg_camera_btnCancel"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/normal_magin"
            android:background="@drawable/cir_selector"
            android:text="取消"
            android:textSize="@dimen/title_large_size"/>
    </LinearLayout>

</FrameLayout>
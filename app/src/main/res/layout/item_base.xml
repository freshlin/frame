<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_ed"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tvTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_magin"
            android:text="测试"
            android:textSize="@dimen/title_large_size"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/imTest"
            android:layout_marginRight="@dimen/normal_magin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ico_btn_radio"
            android:scaleType="center"/>

    </RelativeLayout>

</LinearLayout>